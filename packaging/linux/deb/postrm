#!/bin/bash
# Post-removal script for simple-smtp-mailer

set -e

PROJECT_NAME="simple-smtp-mailer"
CONFIG_DIR="/etc/$simple-smtp-mailer"
LOG_DIR="/var/log/$simple-smtp-mailer"

if [ "$1" = "purge" ]; then
    # Remove configuration files (optional - user may want to keep them)
    # Uncomment to remove config on purge:
    # rm -rf "$CONFIG_DIR"
    
    # Remove log files
    rm -rf "$LOG_DIR"
    
    # Remove service user (optional)
    # userdel smtpmailerdev 2>/dev/null || true
fi

exit 0

