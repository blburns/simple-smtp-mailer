# ssmtp-mailer Address Mapping Configuration
# This file defines routing rules for mapping from-addresses to SMTP accounts

[route:contact@mailer.domain1.com]
from_addresses = ["contact@mailer.domain1.com"]
to_domains = ["domain1.com", "customers.*"]
smtp_account = noreply@domain1.com
domain = domain1.com
allowed_recipients = ["*@domain1.com", "customers@*"]

