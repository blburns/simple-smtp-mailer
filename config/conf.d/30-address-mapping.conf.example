# ssmtp-mailer Address Mapping Configuration
# This file defines routing rules for mapping from-addresses to SMTP accounts

[route:contact@mailer.blburns.com]
from_addresses = ["contact@mailer.blburns.com"]
to_domains = ["blburns.com", "customers.*"]
smtp_account = noreply@blburns.com
domain = blburns.com
allowed_recipients = ["*@blburns.com", "customers@*"]

