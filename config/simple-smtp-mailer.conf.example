# simple-smtp-mailer Configuration File
# This file contains global settings for the mailer application

[global]
# Default hostname for SMTP connections
default_hostname = localhost

# Default from address when none specified
default_from = noreply@localhost

# Configuration directory paths
config_dir = /etc/simple-smtp-mailer
domains_dir = /etc/simple-smtp-mailer/domains
users_dir = /etc/simple-smtp-mailer/users
mappings_dir = /etc/simple-smtp-mailer/mappings
ssl_dir = /etc/simple-smtp-mailer/ssl

# Logging configuration
log_file = /var/log/simple-smtp-mailer.log
log_level = INFO

# Connection settings
max_connections = 10
connection_timeout = 30
read_timeout = 60
write_timeout = 60

# Rate limiting
enable_rate_limiting = true
rate_limit_per_minute = 100
