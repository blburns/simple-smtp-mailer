# Address Mapping Configuration for Mail Relay
# This file maps local addresses to remote addresses for relay operations

# General Contact
[mapping:contact-general]
from_pattern = contact-general@mailer.domain1.com
to_pattern = contact-general@domain1.com
smtp_account = mail-relay@domain1.com
domain = domain1.com

